<%- include('partials/header'); -%>
<h1>Compose</h1>

<form action="/compose" method="post">

    <div class="mb-3 form-group">
        <label class="form-label">Title</label>
        <input class="form-control" type="text" name="postTitle" autofocus>
        <div class="form-text"></div>
        <div class="mb-3">
        <label class="form-label">New Post</label>
        <textarea class="form-control" name="postBody" rows = "8" cols = "50">Write your post here...</textarea>
        </div>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

